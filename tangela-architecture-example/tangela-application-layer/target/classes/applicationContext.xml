<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://cxf.apache.org/jaxrs
                           http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
    <import resource="classpath:domainContext.xml"/>
    <import resource="classpath:persistenceContext.xml"/>

    <bean id="exampleRestController" class="pt.tangela.example.rest.ExampleRestController" />

    <jaxrs:server id="customerService" address="">
        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />
        </jaxrs:providers>
        <jaxrs:serviceBeans>
            <ref bean="exampleRestController" />
        </jaxrs:serviceBeans>
    </jaxrs:server>

</beans>