<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>pt.sample.service</groupId>
    <artifactId>sample-service</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <sample.version>0.0.1-SNAPSHOT</sample.version>
        <maven-war-plugin.version>3.3.1</maven-war-plugin.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <!-- Java EE -->
        <javax.ws.rs-api.version>2.1.1</javax.ws.rs-api.version>
        <persistence-api.version>1.0.2</persistence-api.version>
        <money-api.version>1.1</money-api.version>
        <javax.annotation-api.version>1.3.2</javax.annotation-api.version>
        <javax.cdi-api.version>2.0.SP1</javax.cdi-api.version>
        <javamoney.moneta.version>1.4.2</javamoney.moneta.version>

        <!-- Spring -->
        <spring-boot.version>2.4.1</spring-boot.version>
        <spring-data-jpa.version>2.4.3</spring-data-jpa.version>
        <spring-boot-starter-data-jpa.version>2.3.4.RELEASE</spring-boot-starter-data-jpa.version>
        <resteasy-spring-boot-starter.version>4.6.0.Final</resteasy-spring-boot-starter.version>

        <!-- Quarkus -->
        <jandex-maven-plugin.version>1.0.6</jandex-maven-plugin.version>
        <surefire-plugin.version>2.22.1</surefire-plugin.version>
        <maven.compiler.target>1.8</maven.compiler.target>
        <quarkus.platform.version>1.11.0.Final</quarkus.platform.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <quarkus.platform.artifact-id>quarkus-universe-bom</quarkus.platform.artifact-id>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.parameters>true</maven.compiler.parameters>
        <quarkus-plugin.version>1.11.0.Final</quarkus-plugin.version>
        <compiler-plugin.version>3.8.1</compiler-plugin.version>
        <quarkus.platform.group-id>io.quarkus</quarkus.platform.group-id>

        <!--Others-->
        <commons-lang3.version>3.11</commons-lang3.version>
        <lombok.version>1.18.16</lombok.version>
        <nestjs-tcp-adapter.version>0.1-SNAPSHOT</nestjs-tcp-adapter.version>
        <postgresql-driver.version>42.2.18</postgresql-driver.version>
        <liquibase-maven-plugin.version>4.2.2</liquibase-maven-plugin.version>
    </properties>

    <modules>
        <module>sample-service-app</module>
        <module>sample-service-bll</module>
        <module>sample-service-dal</module>
        <module>sample-service-starters</module>
        <module>sample-service-interfaces</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>javax.annotation-api</artifactId>
            <version>1.3.2</version>
        </dependency>
    </dependencies>
</project>